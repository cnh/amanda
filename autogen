#! /bin/sh
# rebuilds files generated by autoconf&automake.
# a recent (>= 2.12.2) autoreconf is required
# arguments are forwarded to the autoreconf script.

cd `dirname $0`

if test x`ls -1t config/acinclude.m4 2>/dev/null \
	    config/acinclude.m4i config/libtool.m4i |
	  sed 1q` != x"config/acinclude.m4"; then
    rm -f config/acinclude.m4
    cat config/acinclude.m4i config/libtool.m4i > config/acinclude.m4
fi

autoreconf --foreign -l config ${1+"$@"}

exit 0
